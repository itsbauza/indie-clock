{
  "users": [
    {
      "name": "admin",
      "password": "admin_password",
      "tags": "administrator"
    },
    {
      "name": "backend",
      "password": "backend_password",
      "tags": "management"
    }
  ],
  "vhosts": [
    {
      "name": "/"
    }
  ],
  "permissions": [
    {
      "user": "admin",
      "vhost": "/",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    },
    {
      "user": "backend",
      "vhost": "/",
      "configure": "amq\\.topic|users\\..*|awtrix.*|mqtt-subscription-.*",
      "write": "amq\\.topic|users\\..*|awtrix.*|mqtt-subscription-.*",
      "read": "amq\\.topic|users\\..*|awtrix.*|mqtt-subscription-.*"
    }
  ],
  "exchanges": [
    {
      "name": "amq.topic",
      "vhost": "/",
      "type": "topic",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    }
  ],
  "queues": [],
  "bindings": [],
  "policies": [
    {
      "vhost": "/",
      "name": "mqtt-messages-ttl",
      "pattern": "^(users|awtrix)\\.",
      "apply-to": "queues",
      "definition": {
        "message-ttl": 3600000,
        "max-length": 1000,
        "overflow": "reject-publish"
      },
      "priority": 0
    }
  ]
} 